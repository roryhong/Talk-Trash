<div class="container">
    <form action="/" method="POST">
        <div class="text-center m-5">
            <h1>你想對誰說幹話?</h1>
        </div>
        <div class="d-flex justify-content-between">
            {{#each target}}
            <div>
                <div class="card" style="width: 18rem; height:18rem;">
                    <img src="{{this.image}}" class="card-img-top" style="background-size: cover;" alt="...">
                    <div class="form-check m-auto">
                        <input class="form-check-input" type="radio" name="job" id="{{this.id}}" value="{{this.id}}">
                        <label class="form-check-label" for="job">
                            {{this.title}}
                        </label>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="d-flex mt-5 justify-content-center">
            <div>
                <button type="submit" class="btn btn-primary mr-3">產生幹話</button>
            </div>
            {{#if talk}}
            <div class="alert alert-warning col-md-8" role="alert">
                {{language}}
            </div>
            {{/if}}
        </div>
    </form>
</div>

{{#if talk.job}}
<script>
    document.querySelector(`input[value = "{{ talk.job }}"]`).checked = true
</script>
{{/if}}